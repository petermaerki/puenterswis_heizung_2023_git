// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.10-bookworm",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {
	// 	"ghcr.io/devcontainers/features/git:1": {
	// 		"ppa": true,
	// 		"version": "latest"
	// 	}
	// },
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8000
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install --user -r requirements.txt -r requirements_dev.txt",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"hediet.vscode-drawio",
				"mhutchie.git-graph",
				"ms-python.python",
				"ms-python.black-formatter",
				"ms-python.isort",
				"ms-python.pylint",
				"bierner.markdown-mermaid",
				"joffreykern.markdown-toc",
				"charliermarsh.ruff"
			],
			"settings": {
				"python.formatting.provider": "black",
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": false,
				"python.linting.pylintArgs": [
					"--rcfile=${workspaceFolder}/.pylintrc"
				],
				"python.linting.cwd": "${workspaceFolder}",
				"python.linting.mypyEnabled": true,
				// "python.testing.pytestArgs": [],
				"python.testing.cwd": "${workspaceFolder}",
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true,
				"python.linting.mypyArgs": [
					"--config-file=${workspaceFolder}/.mypy.ini"
				],
				"ruff.organizeImports": true,
				"ruff.fixAll": true,
				"ruff.importStrategy": "fromEnvironment",
				"ruff.args": [
					"--config=${workspaceFolder}/.ruff.toml"
				],
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter",
					"editor.formatOnSave": true,
					"editor.codeActionsOnSave": {
						"source.fixAll": true,
						"source.organizeImports": true
					}
				},
				// "isort.args": [
				// 	"--profile",
				// 	"black"
				// ],
				// "base", "forest", "dark", "default", "neutral"
				"markdown-mermaid.lightModeTheme": "base",
				"markdown-mermaid.darkModeTheme": "dark",
				"files.exclude": {
					"app/ui/*.py": true,
					"app/uic/": true,
					"**/__pycache__/": true,
					"**/.mypy_cache/": true,
					"**/.pytest_cache/": true
				},
				"git.openRepositoryInParentFolders": "always",
				"launch": {
					// Use IntelliSense to learn about possible attributes.
					// Hover to view descriptions of existing attributes.
					// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
					"version": "0.2.0",
					"configurations": [
						{
							// uvicorn.run(app, host="0.0.0.0", port=8000)
							// CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "80"]
							/*
							0.00s - Debugger warning: It seems that frozen modules are being used, which may
							0.00s - make the debugger miss breakpoints. Please pass -Xfrozen_modules=off
							0.00s - to python to disable frozen modules.
							0.00s - Note: Debugging will proceed. Set PYDEVD_DISABLE_FILE_VALIDATION=1 to disable this validation.
							*/
							"name": "Python: Dog (uvicorn)",
							"type": "python",
							"request": "launch",
							"module": "uvicorn",
							"args": [
								"app.main:app",
								"--host=0.0.0.0",
								"--port=8000",
								"--reload",
								"--workers=1",
								"--log-level=debug"
							],
							"pythonArgs": [
								"-Xfrozen_modules=off"
							],
							"env": {
								"PYDEVD_DISABLE_FILE_VALIDATION": "1"
							},
							"cwd": "${workspaceFolder}",
							"console": "integratedTerminal"
						},
						{
							"name": "Python: Current File",
							"type": "python",
							"request": "launch",
							"program": "${file}",
							"console": "integratedTerminal"
						}
					]
				}
			}
		}
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}